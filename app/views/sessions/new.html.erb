<h3> Sign - In</h3>
<br />
<%= form_tag sessions_path, class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :email, "Registered Email", :class=>"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= email_field_tag :email, "", class: "form-control", autofocus: true, placeholder: "youremail@somedomain.com"%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password", class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= password_field_tag :password, "", class: "form-control"%>
    </div>
  </div>
<%# ADDED the BELOW CODE FOR AUTH TOKEN - REMEMBER ME FUNCTIONALITY%>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
<p><%= link_to "Forgotten Password?", new_password_reset_path %></p>
</div>
</div>
<%#END OF CODE%>
<%# ADDED the BELOW CODE FOR AUTH TOKEN - REMEMBER ME FUNCTIONALITY%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= check_box_tag :remember_me, 1, params[:remember_me]%>
        <%=label_tag :remember_me, "Remember Me", class: "control-label"%>
    </div>
  </div>
<%#END OF CODE%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Sign In", class: "btn btn-primary" %>
    </div>
  </div>
<%end%>
