<h1>Reset Password</h1>
<br />
<%= form_tag password_resets_path, method: :post, class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :email, "Registered Email", :class=>"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= email_field_tag :email, params[:email], class: "form-control", autofocus: true%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Reset Password", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
