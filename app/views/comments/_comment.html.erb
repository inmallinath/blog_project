<div id="<%= dom_id(comment) %>">
  <div class="panel panel-default">
    <!-- <div class="panel-heading">Comments from Users</div> -->
    <div class="panel-body">
      <%= comment.body%>
    </div>
    <div class="panel-footer">This comment was posted by <%=comment.user_full_name%> on <%= comment.created_at.strftime("%d %b %Y")%></div>
    <%= link_to "Delete", post_comment_path(@post, comment),
                          method: :delete,
                          remote: true,
                          data: {confirm: "Are you sure?"}, :class=>"btn btn-primary", :role=>"button"%>
    <br />
  </div>
</div>
