<div class="page-header">
  <h1>Hello <%= "#{current_user.full_name.titleize}"%></h1>
</div>

<div class = "container">
  <dl class="dl-horizontal">
    <dt>First Name</dt>
    <dd><%= "#{current_user.first_name}"%></dd>
    <dt>Last Name</dt>
    <dd><%= "#{current_user.last_name}"%></dd>
    <dt>Email</dt>
    <dd><%= "#{current_user.email}"%></dd>
  </dl>

  <div class="form-group">
    <!-- <div class="col-sm-6 col-sm-offset-1"> -->
    <div class="btn-toolbar">
      <%= button_to "Edit Profile", edit_user_path(current_user), method: :get, class: "btn btn-primary col-sm-2" %>
      <%= button_to "Change Password", edit_password_user_path(current_user), method: :get, class: "btn btn-primary col-sm-2" %>
    </div>
  </div>
</div>
