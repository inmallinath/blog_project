<h1>Change Password</h1>

<%= @user.errors.full_messages.join(", ") %>

<%= simple_form_for @user,url: edit_password_user_path(@user), method: :patch do |f| %>
  <%= f.input :current_password, label: "Current Password", required: true, class: "form-control" %>
  <%= f.input :password, label: "New Password", required: true, class: "form-control" %>
  <%= f.input :password_confirmation, label: "Confirm Password", required: true, class: "form-control" %>
  <%= f.submit "Change Password!", class: "btn btn-primary" %>
<% end %>

