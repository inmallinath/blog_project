<%= simple_form_for @post do |f| %>
  <%= f.input :title, label: "Post Title" %>
  <%= f.input :body, label: "Content" %>
  <%= f.collection_select(:category_id, Category.order(:title), :id, :title, html_options = {class: "form-select"}) %>
  <%= f.input :image %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

