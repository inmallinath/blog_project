<!DOCTYPE html>
<head>
  <title>Simple Search Form</title>
</head>
<body>
  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <p>
    Search for posts by contents in the title or body
  </p>
  <br />

  <%= form_tag(search_posts_path, :method => "get") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Posts" %>
      <button class="btn" type="submit">&#128269;</button>
    </div>
  <% end %>
<hr />
</body>

<% if params[:search]%>
  <% @posts.each do |post| %>
  <div class="post">
    <h1 class="post-title"><%= link_to post.title, post %></h1>
    <p class="post-content"><%= post.body %></p>
  </div>
  <hr />
<% end %>
<%end%>
